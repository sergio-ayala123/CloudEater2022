<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileEater.Views.BotPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Enter Bot Name" HorizontalOptions="Center"/>
            <Entry Text="{Binding BotName}"/>


            <Button Text="Join Game" Command="{Binding JoinGameAsBotCommand}" HorizontalOptions="Center"/>

            <Label Text="Score" FontSize="Large" HorizontalOptions="Center"/>
            <Label Text="{Binding Score}" FontSize="Medium" HorizontalOptions="Center"/>
            <Label Text="Number of Moves: " FontSize="Large" HorizontalOptions="Center"/>
            <Label Text="{Binding Moves}" FontSize="Medium" HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>